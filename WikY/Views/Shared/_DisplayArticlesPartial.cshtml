@model List<Article>

<table class="table table-striped table-sm table-bordered text-center">
    <thead>
        <tr>
            <th>Id</th>
            <th>Theme</th>
            <th>Auteur</th>
            <th>Contenu</th>
            <th>DateCre</th>
            <th>DateMod</th>
        </tr>
    </thead>
    <tbody id="contentMessage">
        @foreach (var article in Model)
        {
            <tr>
                <td>@article.Id</td>
                <td>@article.Theme</td>
                <td>@article.Auteur</td>
                <td>@article.Contenu</td>
                <td>@article.DateCre</td>
                <td>@article.DateMod</td>
                
                <td>
                    <a asp-action="Read" asp-route-id="@article.Id">Detail</a>
                </td>
            </tr>
        }
    </tbody>
</table>